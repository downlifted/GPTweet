{
  "name": "TweetGPT",
  "manifest_version": 3,
  "version": "2.0.4",
  "description": "Write Intelligent, AI Tweets using chatGPT",
  "permissions": ["storage", "scripting", "notifications", "tabs"],
  "host_permissions": ["https://x.com/", "https://chat.openai.com/"],
  "externally_connectable": {
    "matches": ["https://x.com/*"]
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "service_worker": "./lib/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["lib/chatGPT.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "lib/chatgpt_client.js",
        "icons/button.svg",
        "icons/button_error.svg",
        "icons/x.svg",
        "icons/close.svg",
        "icons/settings.svg",
        "icons/128.png",
        "icons/button.png",
        "icons/button_error.png",
        "assets/settings.html"
      ],
      "matches": ["https://x.com/*"]
    }
  ]
}
